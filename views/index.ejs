<form action="/send" method="POST" style="display: block;">
  <div class="row align-items-start fixed-bottom" style="margin: 5px;">
    <div class="col-11">
      <input type="text" class="form-control" placeholder="Message" name="message">
    </div>
    <div class="col">
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </div>
</form>
<div style="margin-bottom: 100px;">
  <% data.forEach(post => { %>
    <div class="container mt-4">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold"><%= post.author %></div>
              <%= post.message %>
            </div>
            <span class="badge bg-primary rounded-pill"><%= post.timestamp.toDateString() %></span>
          </li>
        </ul>
    </div>
  <% }) %>
</div>
